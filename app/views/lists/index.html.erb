    <div class = "col-4">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path('movie_theather.jpg')%>)">
        <%= link_to list.name.capitalize, list_path(list) %>
      </div>
    </div>
    <% end %>
  </div>
</div>



